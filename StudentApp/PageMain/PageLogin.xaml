<Page x:Class="StudentApp.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentApp.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="260">
            <TextBlock Text="Введите логин"/>
            <TextBox Name="TxbLogin"
                     Margin="10"
            />



            <TextBlock Text="Введите пароль"/>
            <TextBox Name ="TxbPassword"/>

            <TextBlock Text="Подтвердите пароль"/>
            <PasswordBox Name="PxbPassword"
                         Margin="10"
             />


            <Button Content="Войти"
             Name="BtnInLogin"
             Click="BtnInLogin_Click"
             />


            <Button Content="Регистрация"
                    Margin="0,5,5,5"
                    Name="BtnReg"
                    Click="BtnReg_Click"
              />

        </StackPanel>

    </Grid>
</Page>
